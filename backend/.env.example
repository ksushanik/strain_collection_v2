# --- Database ---
DATABASE_URL="postgresql://user:password@localhost:5432/strain_collection"

# --- Auth / JWT ---
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"

# --- Admin / Sessions ---
ADMIN_SESSION_SECRET="session_secret_change_in_production"
# Optional Redis for AdminJS sessions; fallback is in-memory
# REDIS_URL="redis://localhost:6379"

# --- API / Server ---
PORT=3000
# Multiple origins supported as comma-separated list
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# --- ImageKit (leave empty to use local uploads mode) ---
IMAGEKIT_PUBLIC_KEY=""
IMAGEKIT_PRIVATE_KEY=""
IMAGEKIT_URL_ENDPOINT="https://ik.imagekit.io/your_path"

# --- NCBI E-utilities API (optional)
# Get your API key at: https://www.ncbi.nlm.nih.gov/account/
# Without key: 3 requests/second limit
# With key: 10 requests/second limit
NCBI_API_URL="https://eutils.ncbi.nlm.nih.gov/entrez/eutils"
NCBI_API_KEY=""

# --- Audit retention (days) ---
AUDIT_RETENTION_DAYS=90
